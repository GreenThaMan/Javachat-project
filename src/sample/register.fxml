      <children>
         <Label layoutX="98.0" layoutY="99.0" text="Register an account" />
         <Label layoutX="112.0" layoutY="37.0" text="JavaChat">
            <font>
               <Font name="System Bold" size="18.0" />
            </font>
         </Label>
         <TextField fx:id="reg_txt_username" layoutX="76.0" layoutY="180.0" />
         <TextField fx:id="reg_txt_firstname" layoutX="76.0" layoutY="238.0" />
         <TextField fx:id="reg_txt_lastname" layoutX="76.0" layoutY="296.0" />
         <TextField fx:id="reg_txt_password" layoutX="76.0" layoutY="357.0" />
         <Label layoutX="124.0" layoutY="157.0" text="Username" />
         <Label layoutX="124.0" layoutY="215.0" text="First name" />
         <Label layoutX="125.0" layoutY="273.0" text="Last name" />
         <Label layoutX="127.0" layoutY="334.0" text="Password" />
         <Button layoutX="122.0" layoutY="395.0" mnemonicParsing="false" onAction="#handleRegister" text="Register" />
